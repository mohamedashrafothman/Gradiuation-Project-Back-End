doctype html
html
	include ../../partials/header.pug
	body
		.container-scroller
			.container-fluid.page-body-wrapper
				.row
					.content-wrapper.full-page-wrapper.d-flex.align-items-center.auth-pages
						.card.col-md-6.mx-auto
							.card-body.px-4.py-4
								h3.card-title.text-left.mb-3 Reset Password 
								form.row.mt-5(method="POST")
									input(type="hidden", name="_csrf", value=`${csrfToken()}`)
									.col-12
										.form-label-group
											input.form-control.p_input.form-control-lg(type='password' name="password" placeholder="Type Your Email." required)
											label.font-weight-bold Password
									.col-12
										.form-label-group
											input.form-control.p_input.form-control-lg(type='password' name="password-confirm" placeholder="Type Your Email." required)
											label.font-weight-bold Confirm Password

									.w-100
									.col-12
										.row.justify-content-center
											.col-6
												.text-center
													button.btn.btn-gradient-primary.text-white.btn-fw.text-uppercase.font-weight-bold.btn-block.enter-btn(type='submit') Reset Password
												
												
												