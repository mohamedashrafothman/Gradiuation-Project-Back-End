doctype html
html
	include partials/header.pug
	body
		.container-scroller
			block navbar
				nav.navbar.col-lg-12.col-12.p-0.fixed-top.d-flex.flex-row
					.text-center.navbar-brand-wrapper.d-flex.align-items-center.justify-content-center
						a.navbar-brand.brand-logo(href='index.html')
							img(src='/img/logo.svg', alt='logo')
						a.navbar-brand.brand-logo-mini(href='index.html')
							img(src='/img/logo-mini.svg', alt='logo')
					.navbar-menu-wrapper.d-flex.align-items-stretch
						.search-field.ml-4.d-none.d-md-block
							form.d-flex.align-items-stretch.h-100(action='#')
								.input-group
									input.form-control.bg-transparent.border-0(type='text', placeholder='Search')
									.input-group-btn
										button.btn.bg-transparent.dropdown-toggle.px-0(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
											i.mdi.mdi-earth
										.dropdown-menu.dropdown-menu-right
											a.dropdown-item(href='#') Today
											a.dropdown-item(href='#') This week
											a.dropdown-item(href='#') This month
											.dropdown-divider(role='separator')
											a.dropdown-item(href='#') Month and older
									.input-group-addon.bg-transparent.border-0.search-button
										button.btn.btn-sm.bg-transparent.px-0(type='submit')
											i.mdi.mdi-magnify
						ul.navbar-nav.navbar-nav-right
							li.nav-item.d-none.d-lg-block.full-screen-link
								a.nav-link
									i#fullscreen-button.mdi.mdi-fullscreen
							li.nav-item.dropdown
								a#messageDropdown.nav-link.count-indicator.dropdown-toggle(href='#', data-toggle='dropdown', aria-expanded='false')
									i.mdi.mdi-email-outline
									span.count
								.dropdown-menu.dropdown-menu-right.navbar-dropdown.preview-list(aria-labelledby='messageDropdown')
									h6.p-3.mb-0 Messages
									.dropdown-divider
									a.dropdown-item.preview-item
										.preview-thumbnail
											img.profile-pic(src='/img/faces/face4.jpg', alt='image')
										.preview-item-content.d-flex.align-items-start.flex-column.justify-content-center
											h6.preview-subject.ellipsis.mb-1.font-weight-normal Mark send you a message
											p.text-gray.mb-0
												| 1 Minutes ago
									.dropdown-divider
									a.dropdown-item.preview-item
										.preview-thumbnail
											img.profile-pic(src='/img/faces/face2.jpg', alt='image')
										.preview-item-content.d-flex.align-items-start.flex-column.justify-content-center
											h6.preview-subject.ellipsis.mb-1.font-weight-normal Cregh send you a message
											p.text-gray.mb-0
												| 15 Minutes ago
									.dropdown-divider
									a.dropdown-item.preview-item
										.preview-thumbnail
											img.profile-pic(src='/img/faces/face3.jpg', alt='image')
										.preview-item-content.d-flex.align-items-start.flex-column.justify-content-center
											h6.preview-subject.ellipsis.mb-1.font-weight-normal Profile picture updated
											p.text-gray.mb-0
												| 18 Minutes ago
									.dropdown-divider
									h6.p-3.mb-0.text-center 4 new messages
							li.nav-item.dropdown
								a#notificationDropdown.nav-link.count-indicator.dropdown-toggle(href='#', data-toggle='dropdown')
									i.mdi.mdi-bell-outline
									span.count
								.dropdown-menu.dropdown-menu-right.navbar-dropdown.preview-list(aria-labelledby='notificationDropdown')
									h6.p-3.mb-0 Notifications
									.dropdown-divider
									a.dropdown-item.preview-item
										.preview-thumbnail
											.preview-icon.bg-success
												i.mdi.mdi-calendar
										.preview-item-content.d-flex.align-items-start.flex-column.justify-content-center
											h6.preview-subject.font-weight-normal.mb-1 Event today
											p.text-gray.ellipsis.mb-0
												| Just a reminder that you have an event today
									.dropdown-divider
									a.dropdown-item.preview-item
										.preview-thumbnail
											.preview-icon.bg-warning
												i.mdi.mdi-settings
										.preview-item-content.d-flex.align-items-start.flex-column.justify-content-center
											h6.preview-subject.font-weight-normal.mb-1 Settings
											p.text-gray.ellipsis.mb-0
												| Update dashboard
									.dropdown-divider
									a.dropdown-item.preview-item
										.preview-thumbnail
											.preview-icon.bg-info
												i.mdi.mdi-link-variant
										.preview-item-content.d-flex.align-items-start.flex-column.justify-content-center
											h6.preview-subject.font-weight-normal.mb-1 Launch Admin
											p.text-gray.ellipsis.mb-0
												| New admin wow!
									.dropdown-divider
									h6.p-3.mb-0.text-center See all notifications
							li.nav-item.dropdown
								a#profileDropdown.nav-link.dropdown-toggle.nav-profile(href='#', data-toggle='dropdown', aria-expanded='false')
									img(src='/img/faces/face1.jpg', alt='image')
									span.d-none.d-lg-inline Daniel Russiel
								.dropdown-menu.navbar-dropdown.w-100(aria-labelledby='profileDropdown')
									a.dropdown-item(href='#')
										i.mdi.mdi-cached.mr-2.text-success
										|                 Activity Log
									.dropdown-divider
									a.dropdown-item(href='#')
										i.mdi.mdi-logout.mr-2.text-primary
										|                 Signout
							li.nav-item.nav-logout.d-none.d-lg-block
								a.nav-link(href='#')
									i.mdi.mdi-power
						button.navbar-toggler.navbar-toggler-right.d-lg-none.align-self-center(type='button', data-toggle='offcanvas')
							span.mdi.mdi-menu

			.container-fluid.page-body-wrapper
				.row.row-offcanvas.row-offcanvas-right
					block sidebar
						nav#sidebar.sidebar.sidebar-offcanvas
							ul.nav
								li(class=(title=="Home Page" ? "nav-item active" : "nav-item"))
									a.nav-link(href='/')
										span.menu-title Dashboard
										i.mdi.mdi-home.menu-icon
								li(class=(title=="Companies" ? "nav-item active" : "nav-item"))
									a.nav-link(href='/companies')
										span.menu-title Companies
										i.mdi.mdi-contacts.menu-icon
								li(class=(title=="Add New Company" ? "nav-item active" : "nav-item"))
									a.nav-link(href='/companies/add')
										span.menu-title Add company
										i.mdi.mdi-format-list-bulleted.menu-icon


						block messages
							if locals.flashes
								- const categories = Object.keys(locals.flashes)
									each category in categories
										each message in flashes[category]
											.col-xs-11.col-sm-4.alert.alert-with-icon.animated.fadeInDown(class=`alert-${category}`, data-notify='container', role='alert', data-notify-position='top-right', style='display: inline-block; margin: 0px auto; position: fixed; transition: all 0.5s ease-in-out 0s; z-index: 1031; top: 20px; right: 20px;')
												if message.msg						
														button.close(type='button', aria-hidden='true', data-notify='dismiss', style='position: absolute; right: 10px; top: 50%; margin-top: -13px; z-index: 1033;', onClick="this.parentElement.remove()") &times;
														span(data-notify='title')
														span(data-notify='message')= message.msg
														a(href='#', target='_blank', data-notify='url')

												else 
														button.close(type='button', aria-hidden='true', data-notify='dismiss', style='position: absolute; right: 10px; top: 50%; margin-top: -13px; z-index: 1033;', onClick="this.parentElement.remove()") &times;
														span(data-notify='title')
														span(data-notify='message')= message
														a(href='#', target='_blank', data-notify='url')


					.content-wrapper
						block content

					include partials/footer.pug
