					block sidebar
						nav#sidebar.sidebar.sidebar-offcanvas
							ul.nav
								li(class=(title=="Home Page" ? "nav-item active" : "nav-item"))
									a.nav-link(href='/company/dashboard')
										span.menu-title Dashboard
										i.fa.fa-home
								//- li(class=(title==`Add Trip` ? "nav-item active" : "nav-item"))
