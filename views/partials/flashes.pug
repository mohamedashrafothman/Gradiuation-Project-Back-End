if locals.flashes
	- const categories = Object.keys(locals.flashes)
		each category in categories
			each message in flashes[category]
				.col-xs-11.col-sm-4.alert.alert-with-icon.animated.fadeInDown(class=`alert-${category}`, data-notify='container', role='alert', data-notify-position='top-right', style='display: inline-block; margin: 0px auto; position: fixed; transition: all 0.5s ease-in-out 0s; z-index: 1031; top: 20px; right: 20px;')
					if message.msg						
							button.close(type='button', aria-hidden='true', data-notify='dismiss', style='position: absolute; right: 10px; top: 50%; margin-top: -13px; z-index: 1033;', onClick="this.parentElement.remove()") &times;
							i.material-icons(data-notify='icon') notifications
							span(data-notify='title')
							span(data-notify='message')= message.msg
							a(href='#', target='_blank', data-notify='url')

					else 
							button.close(type='button', aria-hidden='true', data-notify='dismiss', style='position: absolute; right: 10px; top: 50%; margin-top: -13px; z-index: 1033;', onClick="this.parentElement.remove()") &times;
							i.material-icons(data-notify='icon') notifications
							span(data-notify='title')
							span(data-notify='message')= message
							a(href='#', target='_blank', data-notify='url')
