							span October 3rd, 2018
					.row.mt-3
						.col-6.pr-1
							img.mb-2.mw-100.w-100.rounded(src='/img/dashboard/img_1.jpg', alt='image')
							img.mw-100.w-100.rounded(src='/img/dashboard/img_4.jpg', alt='image')
