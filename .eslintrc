{
	"env": {
		"browser": true,
		"es6": true,
		"node": true,
		"jquery": true,
		"commonjs": true,
		"mongo": true,
		"mocha": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"sourceType": "module"
	},
	"rules": {
		"no-console": 0,
		"no-undef":0,
		"no-dupe-keys": 0,
		"no-unused-vars": 0,
		"no-redeclare":0,
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"windows"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		]
	}
}